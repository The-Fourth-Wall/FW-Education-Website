---
import Layout from "../layouts/Layout.astro";
import Heading from "../atoms/Heading.astro";
import {fetch_and_process_course_data} from "../utils/course_data.ts";
import InteractiveCourseDisplay from "../components/InteractiveCourseDisplay.astro";
import type {ProcessedCourseData} from "../utils/course_data";

const course_data: ProcessedCourseData = fetch_and_process_course_data();
---

<Layout title="Fourth Wall Education">
  <main class="container mx-auto px-4 py-8 text-white min-h-screen">
    <section class="py-12">
      <Heading
        level={2}
        text="Course Curriculum"
        extra_classes="text-4xl font-bold text-center mb-12"
      />
      <InteractiveCourseDisplay {...course_data} />
    </section>
  </main>
</Layout>
