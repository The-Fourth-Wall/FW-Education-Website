---
export type Props = {
  level: 1 | 2 | 3 | 4 | 5 | 6;
  text: string;
  extra_classes?: string;
};

const {level, text, extra_classes = ""} = Astro.props;

const Tag = `h${level}` as const;

const base_classes = {
  1: "text-4xl font-bold",
  2: "text-2xl font-semibold",
  3: "text-xl font-semibold",
  4: "text-lg font-semibold",
  5: "text-base font-semibold",
  6: "text-sm font-semibold",
};

const final_classes = `${base_classes[level]} ${extra_classes}`.trim();
---

<Tag class={final_classes}>{text}</Tag>
