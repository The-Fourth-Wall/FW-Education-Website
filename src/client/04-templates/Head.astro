---
import {SEO} from "astro-seo";

type Props = {
  title: string;
};

const {title} = Astro.props;
---

<head>
  <SEO
    charset="UTF-8"
    title={title}
    titleDefault="Fourth Wall Education"
    description="Reweaving the Fabric of Learning"
    openGraph={{
      basic: {
        title: title,
        type: "website",
        image: "/icon/logo.svg",
        url: "https://education.fourth-wall.org",
      },
      optional: {
        description: "Fourth Wall Education",
      },
    }}
    twitter={{
      creator: "@itsoblivious99",
      site: "@itsoblivious99",
      title: title,
      description: "Fourth Wall Education",
    }}
    extend={{
      link: [
        {rel: "icon", type: "image/svg+xml", href: "/icon/favicon.svg"},
        {rel: "icon", type: "image/png", href: "/icon/favicon.png"},
        {rel: "preconnect", href: "https://fonts.googleapis.com"},
        {
          rel: "preconnect",
          href: "https://fonts.gstatic.com",
          crossorigin: "true",
        },
        {
          rel: "stylesheet",
          href: "https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap",
        },
      ],
      meta: [
        {
          name: "viewport",
          content: "width=device-width, initial-scale=1.0",
        },
        {
          name: "generator",
          content: Astro.generator,
        },
      ],
    }}
  />
</head>
