---
import {Badge, Spacer, Text} from "@atoms";
import type {Course} from "@models";
import {BackButton} from "@molecules";

type Props = {
  course: Course;
};

const {course} = Astro.props;
---

<div class="header">
  <div class="intro">
    <div class="title">
      <Text
        label={course.name}
        size={1.5}
        type="primary"
        color="var(--fg-color)"
      />
      <Spacer size={2.5} />
      <BackButton />
    </div>

    <Spacer size={0.25} />

    <div class="meta">
      <Badge text={course.code} variant={course.difficulty} size={1} />
      <Text
        label={`Semester ${course.semester}`}
        size={1}
        type="accent"
        color="var(--fg-color)"
      />
      <Text
        label={course.difficulty[0].toUpperCase() + course.difficulty.slice(1)}
        size={1}
        type="accent"
        color={`var(--${course.difficulty}-accent)`}
      />
      <Text
        label={course.time}
        size={1}
        type="secondary"
        color="var(--fg-color)"
      />
    </div>
  </div>
</div>

<style>
  .header {
    margin-bottom: 3rem;
  }

  .intro {
    display: flex;
    flex-direction: column;
  }

  .title {
    display: flex;
    justify-content: space-between;
  }

  .meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  @media (max-width: 864px) {
    .meta {
      gap: 0.5rem;
    }
  }
</style>
