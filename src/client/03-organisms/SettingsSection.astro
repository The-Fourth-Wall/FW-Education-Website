---
import {Text} from "@atoms";

type Props = {
  title: string;
};

const {title} = Astro.props;
---

<div>
  <Text label={title} size={1.125} type="primary" color="var(--fg-color)" />
  <slot />
</div>

<style>
  div {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 50%;
    margin: 0 auto;
    border: 1px solid var(--fg-color);
    border-radius: 0.5rem;
    padding: 2rem;
    gap: 1.25rem;
    box-shadow: none;
    background: none;
  }
</style>
