---
type Props = {
  label: string;
  size: number;
  type: "primary" | "secondary" | "accent";
  color: string;
};

const {label, size, type, color} = Astro.props;

const font_size = `${size}rem`;
---

<span class={type}>
  {label}
</span>

<style define:vars={{font_size, color}}>
  span {
    font-size: var(--font_size);
    color: var(--color);
    transition: color var(--theme-animation-time) ease;
  }

  .primary {
    font-weight: 700;
  }

  .secondary {
    font-weight: 400;
    opacity: 0.9;
  }

  .accent {
    font-weight: 700;
  }
</style>
