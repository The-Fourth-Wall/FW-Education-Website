<button class="border_toggle" data-border-toggle aria-pressed="true">
  <span class="icon">◀</span>
  <span class="label">Borders</span>
</button>

<script>
  const toggle_button = document.querySelector("[data-border-toggle]");
  let show_borders = true;

  if (toggle_button) {
    toggle_button.addEventListener("click", () => {
      show_borders = !show_borders;
      window.dispatchEvent(
        new CustomEvent("border_toggle", {
          detail: {show_borders},
        }),
      );
      toggle_button.setAttribute("aria-pressed", String(show_borders));
      const icon = toggle_button.querySelector(".icon");
      if (icon) {
        icon.textContent = show_borders ? "◀" : "▶";
      }
    });
  }
</script>

<style>
  .border_toggle {
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 100;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(
      145deg,
      rgba(255, 255, 255, 0.1),
      rgba(255, 255, 255, 0.05)
    );
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 2rem;
    color: var(--white);
    font-size: 0.875rem;
    cursor: pointer;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .border_toggle:hover {
    background: linear-gradient(
      145deg,
      rgba(255, 255, 255, 0.15),
      rgba(255, 255, 255, 0.07)
    );
  }
</style>
