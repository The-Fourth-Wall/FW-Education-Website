---
type Props = {
  text: string;
  variant: "fundamental" | "beginner" | "intermediate" | "advanced";
  size: number;
};

const {text, variant, size} = Astro.props;
---

<span
  class={`badge badge-${variant}`}
  style={`
    font-size: ${size}rem;
    padding: ${size * 0.286}rem ${size * 0.857}rem;
  `}>{text}</span
>

<style>
  .badge {
    font-weight: 400;
    border-radius: 0.375rem;
    white-space: nowrap;
    color: var(--white);
  }

  .badge-fundamental {
    background-color: color-mix(in srgb, var(--green) 85%, black);
  }

  .badge-beginner {
    background-color: color-mix(in srgb, var(--blue) 85%, black);
  }

  .badge-intermediate {
    background-color: color-mix(in srgb, var(--orange) 85%, black);
  }

  .badge-advanced {
    background-color: color-mix(in srgb, var(--crimson) 85%, black);
  }
</style>
