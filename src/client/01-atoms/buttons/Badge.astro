---
import Text from "@atoms/text/Text.astro";

type Props = {
  text: string;
  variant: "fundamental" | "beginner" | "intermediate" | "advanced";
  size: number;
};

const {text, variant, size} = Astro.props;
---

<span
  class={`badge badge-${variant}`}
  style={`
    font-size: ${size}rem;
    padding: ${size * 0.286}rem ${size * 0.857}rem;
  `}
  ><Text label={text} size={size} type="secondary" color="var(--white)" /></span
>

<style>
  .badge {
    border-radius: 0.375rem;
    text-align: center;
  }

  .badge-fundamental {
    background-color: color-mix(in srgb, var(--green) 80%, var(--black));
  }

  .badge-beginner {
    background-color: color-mix(in srgb, var(--blue) 85%, var(--black));
  }

  .badge-intermediate {
    background-color: color-mix(in srgb, var(--orange) 78%, var(--black));
  }

  .badge-advanced {
    background-color: color-mix(in srgb, var(--crimson) 85%, var(--black));
  }
</style>
