---
import {get_difficulty_background} from "@app/03-colors/difficulty-colors";
import Text from "@atoms/text/Text.astro";
import type {Difficulty} from "@models/course.model";

type Props = {
  text: string;
  variant: Difficulty;
  size: number;
};

const {text, variant, size} = Astro.props;
const background = get_difficulty_background(variant);
---

<span
  class={`badge ${variant === "master" && "master"}`}
  style={`
    font-size: ${size}rem;
    padding: ${size * 0.226}rem ${size * 0.857}rem;
    background: ${background};
  `}
  ><Text label={text} size={size} type="secondary" color="var(--white)" />
</span>

<style>
  .badge {
    border-radius: 0.375rem;
    text-align: center;
    border: 1px solid transparent;
  }

  .master {
    border: 1px solid color-mix(in srgb, var(--onyx) 90%, var(--white));
    box-shadow: 0 0 10px color-mix(in srgb, var(--white) 12.5%, transparent);
  }
</style>
