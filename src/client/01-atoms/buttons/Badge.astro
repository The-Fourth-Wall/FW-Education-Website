---
type Props = {
  text: string;
  variant: "Beginner" | "Fundamental" | "Intermediate" | "Advanced";
  size: number;
};

const {text, variant, size} = Astro.props;
---

<span
  class={`badge badge-${variant.toLowerCase()}`}
  style={`
    font-size: ${size}rem;
    padding: ${size * 0.286}rem ${size * 0.857}rem;
  `}>{text}</span
>

<style>
  .badge {
    font-weight: 500;
    border-radius: 0.375rem;
    white-space: nowrap;
    color: var(--white);
  }

  .badge-fundamental {
    background-color: var(--green);
  }

  .badge-beginner {
    background-color: var(--blue);
  }

  .badge-intermediate {
    background-color: var(--orange);
  }

  .badge-advanced {
    background-color: var(--crimson);
  }
</style>
