---
type Props = {
  href: string;
};

const {href} = Astro.props;
---

<a class="link-button" href={href} draggable="false">
  <slot />
</a>

<script>
  const links = document.querySelectorAll<HTMLAnchorElement>(".link-button");

  links.forEach(link => {
    link.addEventListener("mousedown", (e: MouseEvent) => {
      e.preventDefault();
      if (e.button === 0) {
        window.location.assign(link.href);
      }
    });
  });
</script>
