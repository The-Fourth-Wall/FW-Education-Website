---
import ThemeSwitcherLogic from "./ThemeSwitcherLogic.svelte";
---

<ThemeSwitcherLogic client:load />

<button class="theme-toggle" data-theme="system" aria-label="Theme toggle">
  <div>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="sun"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="var(--fg-color)">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
      ></path>
    </svg>

    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="moon"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="var(--fg-color)">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z"
      ></path>
    </svg>

    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="computer"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="0"
      stroke="var(--fg-color)">
      <path
        d="M12 2C6.48 2 2 6.48 2 12C2 17.52 6.48 22 12 22C17.52 22 22 17.52 22 12C22 6.48 17.52 2 12 2ZM12 20C7.58 20 4 16.42 4 12C4 7.58 7.58 4 12 4V20Z"
        fill="currentColor"></path>
    </svg>
  </div>
</button>

<style>
  .theme-toggle {
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 0.25rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 0;
  }

  div {
    width: 2.25rem;
    height: 2.25rem;
    border: 1px solid transparent;
    border-radius: 0.25rem;
    transition: var(--hover-animation-time) ease;
  }

  div:hover {
    border: 1px solid color-mix(in srgb, var(--fg-color) 50%, transparent);
    background-color: color-mix(in srgb, var(--fg-color) 7.5%, transparent);
  }

  svg {
    width: 1.125rem;
    height: 1.125rem;
    position: absolute;
    top: 0.55rem;
    left: 0.55rem;
    opacity: 0;
    transform: scale(0) rotate(-360deg);
    transition: var(--theme-animation-time) ease;
  }

  :root.light-theme .sun,
  :root.dark-theme .moon,
  :root.system-theme .computer {
    opacity: 1;
    transform: scale(1) rotate(0);
  }
</style>
