---
type Props = {
  faded?: boolean;
  size: number;
};

const {faded = false, size} = Astro.props;
---

<div class={faded ? "faded" : "non-faded"} style={`margin: ${size}rem 0;`}>
</div>

<style>
  div {
    width: 100%;
    height: 1px;
  }

  .faded {
    background: linear-gradient(
      to left,
      var(--white) 0%,
      rgba(255, 255, 255, 0.5) 50%,
      rgba(255, 255, 255, 0) 100%
    );
  }

  .non-faded {
    background: var(--white);
  }
</style>
