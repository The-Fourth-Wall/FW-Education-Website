---
type Props = {
  faded?: boolean;
  size: number;
};

const {faded = false, size} = Astro.props;
---

<div class={faded ? "faded" : "non-faded"} style={`margin: ${size}rem 0;`}>
</div>

<style>
  div {
    width: 100%;
    height: 1px;
  }

  .faded {
    background: linear-gradient(
      to left,
      var(--fg-color) 0%,
      color-mix(in srgb, var(--white) 50%, transparent) 50%,
      color-mix(in srgb, var(--white) 0%, transparent) 100%
    );
  }

  .non-faded {
    background: var(--white);
  }
</style>
