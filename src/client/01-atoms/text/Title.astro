---
type Props = {
  text: string;
  level: 1 | 2 | 3 | 4 | 5 | 6;
};

const {text, level} = Astro.props;
---

<div class={`heading heading-${level}`}>{text}</div>

<style>
  .heading {
    font-weight: 700;
  }

  .heading-1 {
    font-size: 3rem;
  }

  .heading-2 {
    font-size: 2.5rem;
  }

  .heading-3 {
    font-size: 2rem;
  }

  .heading-4 {
    font-size: 1.5rem;
  }

  .heading-5 {
    font-size: 1.25rem;
  }

  .heading-6 {
    font-size: 1rem;
  }
</style>
